---
type Mode = "fixed" | "sticky";

const {
  brand = "José Alonso",
  projectsCount = 0,
  mode = "fixed" as Mode, // "fixed" o "sticky"
} = Astro.props;

const isFixed = mode === "fixed";
---

<header
  class={`nav ${isFixed ? "is-fixed" : "is-sticky"}`}
  style="--nav-h: 56px"
>
  <div class="nav-inner">
    <a class="brand" href="#top" aria-label="Ir al inicio">{brand}</a>

    <nav class="links" aria-label="Navegación">
      <a href="#sobre">Sobre</a>
      <a href="#proyectos">
        Proyectos <span class="count">({projectsCount})</span>
      </a>
      <a href="#contacto">Contacto</a>
      <a class="toplink" href="#top" aria-label="Volver arriba">↑</a>
    </nav>
  </div>

  <style>
    .nav {
      z-index: 20;
      background: rgba(255, 255, 255, 0.94);
      border-bottom: 1px solid #000;
      height: var(--nav-h);
      display: flex;
      align-items: center;
    }

    .is-sticky {
      position: sticky;
      top: 0;
    }

    .is-fixed {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
    }

    .nav-inner {
      max-width: 720px;
      margin: 0 auto;
      padding: 0 16px;
      width: 100%;
      display: flex;
      align-items: baseline;
      justify-content: space-between;
      gap: 16px;
    }

    .brand {
      font-family: "VT323", monospace;
      font-size: 22px;
      letter-spacing: 0.5px;
      text-decoration: none;
      color: #000;
      line-height: 1;
    }

    .links {
      display: flex;
      align-items: baseline;
      gap: 14px;
      flex-wrap: wrap;
      font-size: 14px;
      line-height: 1;
    }

    .count {
      opacity: 0.7;
    }

    .links a {
      color: #000;
      text-decoration: underline;
      text-decoration-thickness: 1px;
      text-underline-offset: 2px;
    }

    .links a:hover {
      text-decoration-thickness: 2px;
    }

    .toplink {
      text-decoration: none !important;
      border: 1px solid #000;
      padding: 2px 8px;
      line-height: 1.1;
    }
  </style>
</header>
